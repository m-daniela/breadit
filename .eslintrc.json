{
  "extends": "next/core-web-vitals", 
  "rules": {
    // we only want single quotes
    "quotes": ["error", "double"],
    // we want to force semicolons
    "semi": ["error", "always"],
    // we use 4 spaces to indent our code
    "indent": ["error", 4],
    // we want to avoid useless spaces
    "no-multi-spaces": ["error"],
    "no-unused-vars": "off",
    "react/prop-types": "off"
    
},
"ignorePatterns": [
    "node_modules",
    "build",
    "dist",
    "public"
]
}
